<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h2 class="font-weight-normal mt-3">
        <i class="fas fa-edit">
        </i> タスクの編集</h2><br>
    </div>
    <div class="row justify-content-center">
      <%= form_with(model: @task) do |f| %>
      <div class="form-group">
        <label class="form-label">タイトル</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">日付</label>
        <%= f.datetime_field :start_time, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">内容</label>
        <%= f.text_field :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">カテゴリー</label>
        <%= f.text_field :category, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit '編集', class: "btn btn-primary" %>
      </div>
      <div class="form-group">
        <%= link_to '削除', @task, method: :delete, data:{ confirm: '本当によろしいですか？'}, class: "btn btn-danger" %>
      </div>
      <%= link_to '戻る', tasks_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
