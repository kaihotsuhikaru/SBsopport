<div class="container mt-3">
  <%= month_calendar events: @active_tasks do |date, active_tasks| %>
  <%= date.day %>

  <% active_tasks.each do |active_task| %>
    <div>
      <%= active_task.title %>
    </div>
  <% end %>
  <% end %>
  <div class="row">
    <div class="col">
      <h2>タスク一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="text-center col-3 mt-3">
      <%= link_to new_task_path, class: "btn btn-primary btn-lg btn-block", data: {"turbolinks"=>false} do %>
          <i class="fas fa-plus"></i>タスクを作成
      <% end %>
    </div>
    <div class="col-9 mt-3">
      <table class="table table-striped table-hover">
        <thead class="table-secondary">
          <tr>
            <th class="header1">タイトル</th>
            <th class="header2">日付</th>
            <th class="header2">内容</th>
            <th class="header2">カテゴリー</th>
            <th class="header2"></th>
          </tr>
        </thead>
        <tbody>
          <% @active_tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= task.content %></td>
            <td><%= task.category %></td>
            <td>
              <%= link_to edit_task_path(task.id), data: {"turbolinks"=>false} do %>
                <i class="main_task class: btn btn-primary">編集</i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div><br>
  </div>
