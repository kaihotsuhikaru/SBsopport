<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3 text-center">
      <%= image_tag(current_user.image.variant(resize: "150x150").processed) if current_user.image.attached? %>
    </div>
    <div class="col-md-9 mt-3">
      <h2><%= @user.name %>のユーザーページ</h2>
      <!--自己紹介-->
      <div><%= simple_format(@user.introduction) %></div>
      <%= link_to "プロフィールを編集", edit_user_path, class: "btn btn-primary" %>
    </div>

    </div>
  </div>
</div>
<!--投稿中のタスク-->
<div class="container mt-4">
  <div class="row">
    <% @user.tasks.each do |task| %>
      <div class="col-sm-6 col-md-4 mb-2">
        <div class="card">
          <div class="card-header">
            <%= task.title %>
          </div>
          <div class="card-body">
            <h6>内容</h6>
            <%= task.content.truncate(30) %>
            <h6 class="mt-2">カテゴリー</h6>
            <%= task.category %>
            <div class="mt-3 text-right">
              <%= link_to '編集', edit_task_path(task.id), class: 'main_task btn btn-sm btn-primary',  data: {"turbolinks"=>false} %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>